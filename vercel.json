{
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install && cd client && npm install",
  "framework": null,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate" }
      ]
    }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/auth/:path*", "destination": "/api/handler" },
    { "source": "/api/vehicles/:path*", "destination": "/api/handler" },
    { "source": "/api/vehicles", "destination": "/api/handler" },
    { "source": "/api/fuel-entries/:path*", "destination": "/api/handler" },
    { "source": "/api/fuel-entries", "destination": "/api/handler" },
    { "source": "/api/maintenance-entries/:path*", "destination": "/api/handler" },
    { "source": "/api/maintenance-entries", "destination": "/api/handler" },
    { "source": "/api/road-tax-entries/:path*", "destination": "/api/handler" },
    { "source": "/api/road-tax-entries", "destination": "/api/handler" },
    { "source": "/api/insurance-entries/:path*", "destination": "/api/handler" },
    { "source": "/api/insurance-entries", "destination": "/api/handler" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
